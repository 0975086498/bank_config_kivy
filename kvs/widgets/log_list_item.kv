<LogListItem>:
    md_bg_color: 0, 0, 0, 0
    elevation: 0
    orientation: "vertical"
    size_hint_y: None
    padding: [16, 0, 16, 0]
    spacing: 4
    adaptive_height: True
    Label:
        text: root.bank_name
        theme_text_color: 'Custom'
        size: self.texture_size
        size_hint_y: None
        size_hint_x: None
        font_size: 10
        color: app.theme_cls.opposite_bg_normal
        bold: True
    MDLabel:
        id: lastMessage
        text: root.mssg
        height: self.texture_size[1]
        theme_text_color: 'Custom'
        size_hint_y: None
        # size_hint_x: None
        bold: True
        font_size: 13
        color: app.theme_cls.primary_color
        shorten: True
        markup: True
        shorten_from: 'right'
    MDLabel:
        id: time
        text: root.timestamp
        height: self.texture_size[1]
        theme_text_color: 'Custom'
        size_hint_y: None
        # size_hint_x: None
        bold: True
        font_size: 9
        color: app.theme_cls.opposite_bg_normal
        shorten: True
        markup: True
        shorten_from: 'right'

