<BankWithImage@MDBoxLayout>:
    ripple_behavior: True
    radius: [8]
    valign: "center"
    on_release: app.bank_config(root.profile)
    orientation: 'vertical'
    size_hint: (None, None)
    valign: "Center"
    width: '120sp'
    height: avatar.height + name.height + 16
    md_bg_color: [0, 0, 0, 0]
    elevation: 0
    RelativeLayout
        id: avatar
        size: ('50sp', '50sp')
        size_hint: (None, None)
        pos_hint: {'center_x':.5}
        MDCard:
            ripple_behavior: True
            size: avatar.size
            size_hint: (None, None)
            radius: [30, ]
            elevation: 0
            md_bg_color: get_color_from_hex("#299d54")
            pos_hint: {'center_x': .5, 'center_y': .5}

        FitImage:
            size: ('44sp', '44sp') if root.active == True else ('50sp', '50sp')
            radius: [30, ]
            size_hint: (None, None)
            source: root.source
            pos_hint: {'center_x': .5, 'center_y': .5}

    MDLabel:
        id: name
        text: root.text
        size: self.texture_size
        theme_text_color: 'Custom'
        size_hint_y: None
        # size_hint_x: None

        shorten: True
        markup: True
        shorten_from: 'right'

        halign: 'center'
        font_size: '12sp'
        color: [1, 1, 1, 1]
        bold: True
    Widget:
        size_hint_y: None
        height: '8sp'

<BankWithIcon@MDBoxLayout>:
    orientation: 'vertical'
    size: (45, 80)
    size_hint: (None, None)
    spacing: '5sp'
    MDIconButton:
        icon: 'camera-outline'
        theme_text_color: 'Custom'
        pos_hint: {'center_x': .5}
        text_color: [1, 1, 1, 1]
        md_bg_color: app.theme_cls.accent_color
        user_font_size: 18
        size: (40, 40)
        size_hint: (None, None)
    MDLabel:
        text: 'Your Story'
        size: self.texture_size
        theme_text_color: 'Custom'
        size_hint_y: None
        # size_hint_x: None
        halign: 'center'
        font_size: 9
        color: [1, 1, 1, 1]
        bold: True
