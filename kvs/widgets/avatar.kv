<Avatar@RelativeLayout>:
    size: ('50sp', '50sp')
    size_hint: (None, None)
    source: root.source
    active: root.active
    MDCard:
        ripple_behavior: True
        size: root.size
        size_hint: (None, None)
        radius: [30, ]
        elevation: 0
        md_bg_color: get_color_from_hex("#299d82")
        pos_hint: {'center_x': .5, 'center_y': .5}

    FitImage:
        size: ('45sp', '45sp') if root.active == False else ('50sp', '50sp')
        radius: [30, ]
        size_hint: (None, None)
        source: root.source
        pos_hint: {'center_x': .5, 'center_y': .5}